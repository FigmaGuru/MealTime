rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own data
    // Family members can access if a family-access grant exists
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read, write: if request.auth != null
        && exists(/databases/$(database)/documents/family-access/$(userId + '_' + request.auth.uid));
    }

    // Family access grants (created when a linked member logs in)
    match /family-access/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Family links (owner manages who is linked)
    match /family-links/{linkId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.resource.data.ownerUid == request.auth.uid;
      allow delete: if request.auth != null
        && resource.data.ownerUid == request.auth.uid;
    }
  }
}
